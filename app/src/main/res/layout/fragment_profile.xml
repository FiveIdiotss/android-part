<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.minhoi.memento.ui.join.JoinViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.join.ProfileFragment"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="10dp"
            android:text="필수 정보 입력"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:background="@drawable/round_corner_purple_color"
                android:hint="Email"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:onTextChanged="@{(s, start, before, count) -> viewmodel.onEmailTextChanged(s)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/emailCheckText"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#FF0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputEmail" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onTextChanged="@{(s, start, before, count) -> viewmodel.onPasswordTextChanged(s)}"
            android:background="@drawable/round_corner_purple_color"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/inputPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onTextChanged="@{(s, start, before, count) -> viewmodel.onPasswordCheckTextChanged(s)}"
            android:background="@drawable/round_corner_purple_color"
            android:hint="비밀번호 확인" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onTextChanged="@{(s, start, before, count) -> viewmodel.onNameTextChanged(s)}"
            android:background="@drawable/round_corner_purple_color"
            android:hint="이름" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="12dp"
            android:text="성별"
            android:textSize="16dp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gender_radio_button"
                android:textAlignment="center"
                android:button="@null"
                android:text="남자"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gender_radio_button"
                android:textAlignment="center"
                android:button="@null"
                android:text="여자"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/joinBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/radius_btn"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</layout>